@model IEnumerable<Library.UI.Models.BookModel>

@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>            
            @Html.ActionLink("Book Title", "Index", new { orderBy = "Book Title" })
        </th>
        <th>
            @Html.ActionLink("Authers", "Index", new { orderBy = "Auther" })
        </th>
        <th>
            Available
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAvailable)
        </td>
        <td>
            @{ 
                if (item.IsAvailable == "Yes")
                {
                    @Html.ActionLink("Borrow", "BorrowBook", new { bookId = item.BookId })
                }
                else
                {
                    @Html.ActionLink("Return", "ReturnBook", new { bookId = item.BookId })
                }
            }
            |
            @Html.ActionLink("History", "History", new { bookId = item.BookId })
        </td>
    </tr>
}
</table>

<span>Ordered by : @ViewBag.OrderBy @ViewBag.OrderDirection</span>
